<?xml version="1.0" encoding="utf-8"?>
<lego:page xmlns:lego="https://lego.yandex-team.ru">
    <lego:i-lego-example>
        <lego:b-form-slider min="10" max="300" lego:theme="grey" lego:size="xs">

            <lego:info lego:preset="inline">
                <lego:title>Цена</lego:title>

                <lego:b-form-input lego:theme="grey" value="50">
                    <lego:input/>
                </lego:b-form-input>

                <lego:unit>руб.</lego:unit>
            </lego:info>

            <lego:scale>
                <lego:mark value="0" step="10">
                    <lego:label>0</lego:label>
                </lego:mark>
                <lego:mark value="10" step="5" percent="10">
                    <lego:label>10</lego:label>
                </lego:mark>
                <lego:mark value="50" step="10" percent="50">
                    <lego:label>50</lego:label>
                </lego:mark>
                <lego:mark value="1000">
                    <lego:label>1000</lego:label>
                </lego:mark>
            </lego:scale>
        </lego:b-form-slider>
    </lego:i-lego-example>

</lego:page>
